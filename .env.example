# Armcalc Bot Configuration
# Copy this file to .env and fill in your values

# ===================
# REQUIRED
# ===================

# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# ===================
# OPTIONAL
# ===================

# Dry run mode - set to true to mock external API calls
# Useful for testing without hitting rate limits
DRY_RUN=false

# Debug mode
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Cache TTLs (seconds)
PRICE_CACHE_TTL_SEC=60
FX_CACHE_TTL_SEC=900

# HTTP request settings
REQUEST_TIMEOUT_SEC=10
MAX_RETRIES=3

# Database path for history storage
HISTORY_DB_PATH=./data/history.sqlite3

# Default currencies
DEFAULT_FIAT=USD
DEFAULT_CRYPTO_FIAT=USD

# Timezone for timestamps
TIMEZONE=Asia/Yerevan

# Max history entries to show
HISTORY_LIMIT=10

# ===================
# EXSWAPING XML SERVICE
# ===================

# URL for exchange rates XML
EXSWAPING_XML_URL=https://exswaping.com/currencies.xml

# XML cache TTL in seconds
EXSWAPING_XML_TTL_SEC=120

# Default RUB payment method (sberbank, tinkoff, alfa, vtb)
DEFAULT_RUB_METHOD=sberbank

# Path to fixture XML for DRY_RUN mode
EXSWAPING_FIXTURE_PATH=tests/fixtures/currencies.xml
